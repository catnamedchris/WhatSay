extends layout

block content
  div#shitty-login.container
    h2.form-signin-heading= 'Please sign in'
    label.sr-only(for='inputEmail')= 'Email address'
    input#inputEmail.form-control(placeholder='Email address', required, autofocus, name='email')
    label.sr-only(for='inputPassword')= 'Password'
    input#inputPassword.form-control(type='password', placeholder='Password', name='password')
    div.checkbox
      label
        input(type='checkbox', value='remember-me')= 'Remember me'
    button#button-login.btn.btn-lg.btn-primary.btn-block(type='submit')= 'Sign in'

  div#main
    div#question-area
      button#btn-logs.btn.btn-default(type='button', aria-label='History')
        span.glyphicon.glyphicon-time(aria-hidden='true')

      textarea#question.form-control(
        placeholder='Don\'t know how to respond to a text? Give me some background, and I\'ll give you a suggestion.',
        rows='6')

      button#btn-submit.btn.btn-default= 'Submit'

    div#answer-area
      div#wait-marker
      div#answer-container
        h3= 'Here\'s what you should say:'
        p#answer

    div#logs
      ul#chat
      button.btn.btn-default(type='button', aria-label='Close')
        span.glyphicon.glyphicon-remove-circle(aria-hidden='true')

  script(type='text/template', id='chat-entry')
    li(class='`userType`')
  
  script(src='https://cdn.firebase.com/js/client/2.2.2/firebase.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(src='https://cdn.socket.io/socket.io-1.2.0.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/spin.js/2.0.1/spin.min.js')
  script(src='/javascripts/main.js')
